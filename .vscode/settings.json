{
    "[markdown]": {
        "editor.wordWrap": "on",             // Ajuste automático de línea
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },     // Sugerencias rápidas (autocompletado)
        "editor.formatOnSave": true,         // Formatear automáticamente al guardar
        "editor.tabSize": 2,                 // Tamaño de tabulación más pequeño (común en Markdown)
        "editor.insertSpaces": true,         // Usar espacios en lugar de tabs
        "editor.spellCheck": true,           // (si tienes una extensión como Code Spell Checker)
        "markdown.previewFrontMatter": "show", // Muestra el front matter en la vista previa
        "files.trimTrailingWhitespace": true // Limpia espacios al final de línea
    }
}
